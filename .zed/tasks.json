[
  {
    "label": "Claude Code",
    "command": "claude",
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": true,
    "allow_concurrent_runs": true,
    "reveal": "always",
    "hide": "never",
    "show_summary": false,
    "show_command": false
  },
  {
    "label": "Dev Server",
    "command": "pnpm run dev",
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "never"
  },
  {
    "label": "Build",
    "command": "pnpm run build",
    "cwd": "$ZED_WORKTREE_ROOT",
    "reveal": "always",
    "hide": "on_success"
  },
  {
    "label": "Typecheck",
    "command": "pnpm run typecheck",
    "cwd": "$ZED_WORKTREE_ROOT",
    "reveal": "always",
    "hide": "on_success"
  },
  {
    "label": "Lint",
    "command": "pnpm run lint",
    "cwd": "$ZED_WORKTREE_ROOT",
    "reveal": "always",
    "hide": "on_success"
  },
  {
    "label": "Format",
    "command": "pnpm run format --write",
    "cwd": "$ZED_WORKTREE_ROOT",
    "reveal": "always",
    "hide": "on_success"
  },
  {
    "label": "Check (Lint + Format)",
    "command": "pnpm run check --write",
    "cwd": "$ZED_WORKTREE_ROOT",
    "reveal": "always",
    "hide": "on_success"
  },
  {
    "label": "Test",
    "command": "pnpm run test",
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "never"
  },
  {
    "label": "Test (Run Once)",
    "command": "pnpm run test --run",
    "cwd": "$ZED_WORKTREE_ROOT",
    "reveal": "always",
    "hide": "on_success"
  },
  {
    "label": "Docker Build",
    "command": "pnpm run docker:build",
    "cwd": "$ZED_WORKTREE_ROOT",
    "reveal": "always",
    "hide": "on_success"
  }
]
